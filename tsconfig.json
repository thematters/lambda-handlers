{
  "extends": "./node_modules/@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["es2022", "DOM"]
  },
  "include": ["*.ts", "bin/**/*.ts", "handlers/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
